<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_blue</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>

    <style name="Widget.MarketSync.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/deep_blue</item>
        <item name="hintTextColor">@color/deep_blue</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>
</resources>